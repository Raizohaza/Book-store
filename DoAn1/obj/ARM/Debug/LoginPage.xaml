<Page
    x:Class="DoAn1.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DoAn1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="250" Width="250">

    <Grid Background="White" Margin="0,0,-1,0">
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='2' x:Name="Content_Area" Height="2*"/>
            <RowDefinition x:ConnectionId='3' x:Name="Username_Area" Height="1*"/>
            <RowDefinition x:ConnectionId='4' x:Name="Password_Area" Height="1*"/>
            <RowDefinition x:ConnectionId='5' x:Name="Forget_Password_Area" Height="0.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Username" Height="20" Width="66" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1"/>
            <TextBox x:ConnectionId='7' Name="txt_Username" Width="156" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Password" Height="20" Width="66" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"/>
            <TextBox x:ConnectionId='6' Name="txt_Password" Width="156" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2"/>
        </StackPanel>

    </Grid>
</Page>

