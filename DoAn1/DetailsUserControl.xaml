<UserControl
    x:Class="DoAn1.DetailsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DoAn1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   Height="750" Width="1100">

    <UserControl.Resources>
        <local:RelativeToAsolutePathConverter x:Key="pathConverter"/>
    </UserControl.Resources>

    <Grid x:Name="DetailUC" Background="AliceBlue" >
        <Button x:Name="Back" Content="Back" Click="Back_Click" Background="Snow" Height="40" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" />

        <Image Source="{Binding Image, Converter={StaticResource pathConverter}}"  Width="300" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,75,0,0"></Image>
        <StackPanel Orientation="Horizontal" Width="300" Margin="10,403,790,226">
            <TextBlock Text="{Binding Id}" FontSize="40"  TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Name}" FontSize="40" TextWrapping="Wrap"/>
        </StackPanel>
        <ListView x:Name="lvManyImg" Height="300" Margin="400,75,219,375">
            <Image x:Name="ManyImg" Source="{Binding}" Height="50" Width="50"/>
        </ListView>

        <TextBlock x:Name="tblDescrip" Text="{Binding}" Margin="400,403,219,168"/>
    </Grid>
</UserControl>
